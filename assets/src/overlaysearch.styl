.searchparagraph
    font-family: Cuprum, sans-serif
    border-bottom: 10px
    text-align: center
    .fa-bullseye
        color: white
    a
        margin-top: 20px
        color: white
        font-size: 25px;
        &:hover
            text-decoration: none 
            color: grey

/* The overlay effect with black background */
.overlay
    height: 100%;
    width: 100%;
    display: none;
    position: fixed;
    z-index: 9999;
    top: 0;
    left: 0;
    background-color: rgb(0,0,0);
    background-color: rgba(0,0,0.5,0.9); /* Black with a little bit see-through */

/* The content */
.overlay-content
    position: relative;
    top: 18%;
    width: 80%;
    text-align: center;
    margin-top: 30px;
    margin: auto;


/* Close button */
.overlay .closebtn
    position: absolute;
    top: 20px;
    right: 45px;
    font-size: 60px;
    cursor: pointer;
    color: white;

.overlay .closebtn:hover
    color: #ccc;


/* Style the search field */
.overlay input[type=text]
    color: #ffffff;
    height: 5rem;
    font-size: 2.25rem;
    padding: 1.25rem 0;
    font-weight: 900;
    background-color: transparent;
    box-shadow: none;
    border: 0;
    border-bottom: 0.1875rem solid #ffffff;
    font-family: "Montserrat", sans-serif;

.overlay input[type=text]:focus
    outline: none;

/* Style the submit button */
.overlay button
    float: left;
    width: 20%;
    padding: 15px;
    background: #ddd;
    font-size: 17px;
    border: none;
    cursor: pointer;

.overlay button:hover
    background: #bbb;